{
  "database": {
    "rules": "database/database.rules.json"
  },
  "functions": {
    "source": "functions",
    "ignore": [
      "src/**"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
