#!/usr/bin/env node
const dotenv = require('dotenv')
const minimist = require('minimist')
require('dotenv').config()

const { run } = require('../src/index')

const command = process.argv[2]
const options = minimist(process.argv.slice(2))
delete options._

dotenv.config()
run(command, options)
  .then(() => process.exit())
  .catch((error) => {
    console.error(error)
    process.exit(1)
  })
